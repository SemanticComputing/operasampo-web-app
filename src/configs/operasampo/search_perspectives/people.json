            "sortValues": false,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "language",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100
        },
        {
            "id": "dateOfBirth",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "placeOfBirth",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "dateOfDeath",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "placeOfDeath",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "additionalInfo",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 250,
            "onlyOnInstancePage": true
        },
        {
            "id": "roleCharacter",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 250,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "performanceRole",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "sortBy": "prefLabel",
            "numberedList": false,
            "minWidth": 200,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        }
    ],
    "facets": {
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        }
    }
}
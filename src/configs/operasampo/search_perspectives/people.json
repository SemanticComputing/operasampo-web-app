{
    "id": "people",
    "endpoint": {
        "url": "https://ldf.fi/operasampo/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPeople.js",
    "baseURI": "http://ldf.fi/operasampo/",
    "URITemplate": "<BASE_URI><LOCAL_ID>",
    "facetClass": "scop:Person",
    "frontPageImage": "main_page/image-people.jpg",
    "searchMode": "faceted-search",
    "defaultActiveFacets": [
        "prefLabel",
        "role"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "people": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "personProperties",
                "pagesize": 20,
                "sortBy": null,
                "sortDirection": null
            },
            "instanceConfig": {
                "propertiesQueryBlock": "personProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "instacePageRoles": {
                        "tabID": 1,
                        "component": "ApexCharts",
                        "doNotRenderOnMount": true,
                        "tabPath": "role_chart",
                        "tabIcon": "PieChart",
                        "facetClass": "people",
                        "sparqlQuery": "personRolesQuery",
                        "resultMapper": "mapPieChart",
                        "filterTarget": "performanceRole",
                        "pageType": "instancePage",
                        "sliceVisibilityThreshold": 0.01,
                        "dropdownForResultClasses": false,
                        "dropdownForChartTypes": true,
                        "chartTypes": [
                            {
                                "id": "pie",
                                "createChartData": "createApexPieChartData"
                            },
                            {
                                "id": "bar",
                                "createChartData": "createApexBarChartData"
                            }
                        ]
                    },
                    "personInstancePageNetwork": {
                        "tabID": 2,
                        "component": "Network",
                        "tabPath": "role_network",
                        "tabIcon": "BubbleChart",
                        "pageType": "instancePage",
                        "sparqlQuery": "personInstancePageNetworkLinksQuery",
                        "sparqlQueryNodes": "personNetworkNodesQuery",
                        "useNetworkAPI": true,
                        "limit": 100,
                        "optimize": 1.0,
                        "preprocess": "preprocessEgo",
                        "style": [
                            {
                                "selector": "node",
                                "style": {
                                    "shape": "ellipse",
                                    "font-size": "data(font_size)",
                                    "background-color": "data(color)",
                                    "label": "data(prefLabel)",
                                    "height": "data(size)",
                                    "width": "data(size)",
                                    "border-width": "data(border_width)",
                                    "border-color": "black"
                                }
                            },
                            {
                                "selector": "edge",
                                "style": {
                                    "width": "data(weight)",
                                    "line-color": "data(color)",
                                    "curve-style": "bezier",
                                    "content": "data(prefLabel)",
                                    "color": "hsl(30, 64%, 35%)",
                                    "opacity": 0.6,
                                    "target-arrow-shape": "none",
                                    "font-size": "8",
                                    "text-valign": "center",
                                    "edge-text-rotation": "autorotate",
                                    "text-background-opacity": 1,
                                    "text-background-color": "white",
                                    "text-background-shape": "roundrectangle"
                                }
                            }
                        ],
                        "layout": {
                            "name": "cose",
                            "idealEdgeLength": 100,
                            "nodeOverlap": 20,
                            "refresh": 20,
                            "fit": true,
                            "padding": 30,
                            "randomize": false,
                            "componentSpacing": 100,
                            "nodeRepulsion": 400000,
                            "edgeElasticity": 100,
                            "nestingFactor": 5,
                            "gravity": 80,
                            "numIter": 1347,
                            "initialTemp": 200,
                            "coolingFactor": 0.95,
                            "minTemp": 1
                        }
                    },
                    "rolesTimeline": {
                        "tabID": 3,
                        "component": "ApexChartsDouble",
                        "tabPath": "roles_timeseries",
                        "tabIcon": "Tune",
                        "pageType": "instancePage",
                        "upperResultClass": "rolesDoubleUpper",
                        "lowerResultClass": "rolesDoubleLower",
                        "resultClasses": {
                            "rolesDoubleUpper": {
                                "title": "Roolit aikajanalla",
                                "height": "70%",
                                "sparqlQuery": "rolesTimelineQuery",
                                "resultMapper": "createCorrespondenceChartData",
                                "resultMapperConfig": {
                                    "types": ["rooli"],
                                    "numberTopResults": 20
                                },
                                "createChartData": "createTopTimelineChartData",
                                "tooltip": { "x": { "format": "d MMM yyyy" } },
                                "fill": { "opacity": [0.7, 0.5] },
                                "legend": { "position": "bottom" },
                                "grid": {
                                    "row": {
                                      "colors": ["#d5d5d5", "transparent"], 
                                      "opacity": 0.25
                                    },
                                    "column": { "colors": ["#a8a8a8", "transparent"] },
                                    "xaxis": { "lines": { "show": true } },
                                    "yaxis": { "lines": { "show": true } }
                                }
                            },
                            "rolesDoubleLower": {
                                "height": "30%",
                                "sparqlQuery": "performancesPerformedQuery",
                                "resultMapper": "createCorrespondenceChartDataLower",
                                "resultMapperConfig": {
                                    "fillEmptyValues": true
                                },
                                "createChartData": "createTopTimelineChartData2",
                                "title": { "text": "Esiintymiset vuosittain", "align": "left" },
                                "xaxis": {
                                    "type": "datetime",
                                    "tooltip": { "enabled": true }
                                },
                                "yaxis": {
                                    "labels": { "minWidth": 150, "maxWidth": 300 }
                                },
                                "grid": {
                                    "column": { "colors": ["#a8a8a8", "transparent"] },
                                    "xaxis": { "lines": { "show": true } },
                                    "yaxis": { "lines": { "show": true } }
                                },
                                "tooltip": { "x": { "format": "yyyy" } },
                                "stroke": { "curve": "stepline", "width": 1 },
                                "fill": {
                                    "type": "gradient",
                                    "gradient": {
                                        "shadeIntensity": 1,
                                        "opacityFrom": 0.3,
                                        "opacityTo": 0.6
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "properties": [
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 100
        },
        {
            "id": "firstName",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100,
            "onlyOnInstancePage": true
        },
        {
            "id": "lastName",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100,
            "onlyOnInstancePage": true
        },
        {
            "id": "role",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 100
        },
        {
            "id": "roleCharacter",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 250,
            "expandedOnInstancePage": true
        },
        {
            "id": "performanceRole",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "sortBy": "prefLabel",
            "numberedList": false,
            "minWidth": 200,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "additionalInfo",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 250,
            "onlyOnInstancePage": true
        }
    ],
    "facets": {
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        },
        "role": {
            "containerClass": "ten",
            "facetType": "list",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "filterType": "uriFilter",
            "predicate": "scop:role",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "scop:role/skos:prefLabel",
            "sortDirection": "desc"
        },
        "roleCharacter": {
            "containerClass": "ten",
            "facetType": "list",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "filterType": "uriFilter",
            "predicate": "^scop:actor/scop:compositionRole",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "^scop:actor/scop:compositionRole/skos:prefLabel",
            "sortDirection": "desc"
        },
        "composition": {
            "containerClass": "ten",
            "facetType": "list",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "filterType": "uriFilter",
            "predicate": "(((^scop:actor/scop:performance)|^scop:choirLeadBy|^scop:conductedBy|^scop:directedBy|^scop:translator)/scop:composition)|^scop:composedBy|^scop:libretist",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "((((^scop:actor/scop:performance)|^scop:choirLeadBy|^scop:conductedBy|^scop:directedBy|^scop:translator)/scop:composition)|^scop:composedBy|^scop:libretist)/skos:prefLabel",
            "sortDirection": "desc"
        }
    }
}
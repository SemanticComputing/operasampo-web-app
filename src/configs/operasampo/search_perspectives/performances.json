    "facets": {
        "prefLabel": {
            "sortByPredicate": "skos:prefLabel"
        },
        "composition": {
            "containerClass": "ten",
            "facetType": "list",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "filterType": "uriFilter",
            "predicate": "scop:composition",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "scop:composition/skos:prefLabel",
            "sortDirection": "desc"
        },
        "composer": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
